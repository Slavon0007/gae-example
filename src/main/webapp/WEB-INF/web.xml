<?xml version="1.0" encoding="utf-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>com.servlets.UsersListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home work</servlet-name>
        <servlet-class>com.servlets.HTMLServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home work</servlet-name>
        <url-pattern>/user/home-task</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>loginForm</servlet-name>
        <servlet-class>com.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginForm</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createUserServlet</servlet-name>
        <servlet-class>com.servlets.CreateUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createUserServlet</servlet-name>
        <url-pattern>/users/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editUserServlet</servlet-name>
        <servlet-class>com.servlets.EditUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editUserServlet</servlet-name>
        <url-pattern>/users/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetCookieServlet</servlet-name>
        <servlet-class>SetCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SetCookieServlet</servlet-name>
        <url-pattern>/set-cookie </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCookieServlet</servlet-name>
        <servlet-class>GetCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetCookieServlet</servlet-name>
        <url-pattern>/get-cookie </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCookieServlet</servlet-name>
        <servlet-class>DeleteCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCookieServlet</servlet-name>
        <url-pattern>/delete-cookie </url-pattern>
    </servlet-mapping>

</web-app>

